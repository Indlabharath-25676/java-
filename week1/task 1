public int EvenOddDigitsSum(int input1, String input2) {
    int sum = 0;
    input1 = Math.abs(input1);  // Handle negative numbers by taking absolute value
    while (input1 > 0) {
        int d = input1 % 10;
        if (input2.equalsIgnoreCase("even") && d % 2 == 0) sum += d;
        if (input2.equalsIgnoreCase("odd") && d % 2 != 0) sum += d;
        input1 /= 10;
    }
    return sum;
}