static int mostFrequentDigit(int n) {
    int[] freq = new int[10];
    int absN = Math.abs(n);

    while (absN > 0) {
        freq[absN % 10]++;
        absN /= 10;
    }

    int max = 0, digit = 0;
    for (int i = 0; i < 10; i++) {
        if (freq[i] > max) {
            max = freq[i];
            digit = i;
        }
    }
    return digit;
}